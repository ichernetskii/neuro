{
	"printWidth": 120,
	"useTabs": true,
	"tabWidth": 4,
	"arrowParens": "avoid",
	"overrides": [{
		"files": ["**/*.json"],
		"options": {
			"parser": "json",
			"useTabs": false ,
			"tabWidth": 2
		}
	}, {
		"files": ["**/*.html", "**/*.htm"],
		"options": {
			"parser": "html",
			"useTabs": false,
			"tabWidth": 2
		}
	}]
}
